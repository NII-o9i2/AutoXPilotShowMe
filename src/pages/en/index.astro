<style>
  #home,
  #about,
  #team {
    width: 100vw;
    height: 100vh;
    padding: 20px 30px;
    background-image: linear-gradient(
      to right bottom,
      #07d2fb,
      #00dbf8,
      #00e4f2,
      #00ece9,
      #00f3dd,
      #00ece4,
      #00e5ea,
      #00deed,
      #00c3fc,
      #00a5ff,
      #0080ff,
      #3e4fec
    );
    background-size: cover;
  }
  #about {
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(
      to right top,
      #07d2fb,
      #00dbf8,
      #00e4f2,
      #00ece9,
      #00f3dd,
      #00ece4,
      #00e5ea,
      #00deed,
      #00c3fc,
      #00a5ff,
      #0080ff,
      #3e4fec
    );
  }
  #team {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  main {
    width: 100%;
    height: calc(100% - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: "wen-quan-deng-kuan", sans-serif;
    text-align: center;
  }
  .title {
    font-family: "YouShe", sans-serif;
  }
  .title h1 {
    font-size: 60px;
    margin-bottom: -10px;
  }
  .title p {
    font-size: 60px;
  }
  .detail {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
    font-size: 16px;
    line-height: 1.8rem;
    margin-top: 30px;
  }
  .button {
    position: relative;
    overflow: hidden;
    width: 180px;
    height: 56px;
    color: white;
    background-color: black;
    border-radius: 26px;
    text-align: center;
    line-height: 56px;
    margin-top: 70px;
    cursor: pointer;
    transition: all 0.5s ease;
  }
  .button a {
    display: inline-block;
    width: 100%;
    height: 100%;
    letter-spacing: 3px;
  }
  .button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(228, 240, 255, 0.4),
      transparent
    );
    transition: all 650ms;
  }
  .button:hover::before {
    left: 100%;
  }

  /* about */
  .about-title {
    font-size: 40px;
    font-weight: bold;
  }

  #about ul {
    color: rgba(0, 0, 0, 0.7);
    font-size: 20px;
  }
  #about ul li {
    line-height: 40px;
    font-family: "wen-quan-deng-kuan", sans-serif;
  }

  .person-intro {
    display: flex;
    flex-wrap: wrap;
    max-width: 412px;
  }
  .contact {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 180px;
    height: 180px;
    color: white;
    background-color: black;
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-radius: 18px;
    padding: 20px;
    margin-right: 24px;
    margin-bottom: 24px;
    box-shadow:
      rgba(50, 50, 93, 0.25) 0px 6px 12px -2px,
      rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
    transition: all 0.3s ease-in-out;
  }

  .contact img {
    width: 30px;
  }
  .contact:hover {
    transform: scale(1.05);
  }
  .team-title {
    font-size: 40px;
    text-align: center;
    margin-bottom: 24px;
    font-family: 'youshe', sans-serif;
    letter-spacing: 4px;
  }
</style>
