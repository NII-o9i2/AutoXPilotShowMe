    position: relative;
    overflow: hidden;
    width: 180px;
    height: 56px;
    color: white;
    background-color: black;
    border-radius: 26px;
    text-align: center;
    line-height: 56px;
    margin-top: 70px;
    cursor: pointer;
    transition: all 0.5s ease;
  }
  .button a {
    letter-spacing: 3px;
  }
  .button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(228, 240, 255, 0.4),
      transparent
    );
    transition: all 650ms;
  }
  .button:hover::before {
    left: 100%;
  }
</style>
