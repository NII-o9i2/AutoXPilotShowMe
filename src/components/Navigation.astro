---
import LanguageSwitch from "./LanguageSwitch.astro";
const {lang} = Astro.props
const navTitle = {
  en: {
    home: 'Home',
    about: 'About',
    articles: 'Articles',
    contact: 'Contact'
  },
  cn: {
    home: '首页',
    about: '关于',
    articles: '文章',
    contact: '联系我们'
  }
}
---
<!-- 顶部导航 -->
<div class="nav-links">
  <div style="display: flex; align-items: center" class="right">
    <div class="logo">
      <img src="../../public/images/logo.png" alt="" />
    </div>
    <div class="links">
      <a href="#home">{navTitle[lang].home}</a>
      <a href="#about">{navTitle[lang].about}</a>
      <a href="#articles">{navTitle[lang].articles}</a>
      <a href="#contact">{navTitle[lang].contact}</a>
    </div>
  </div>
  <div class="language">
    <LanguageSwitch lang={lang}/>
  </div>
</div>

<style>
  .nav-links {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 30px;
    height: 60px;
    width: 100%;
    backdrop-filter: blur(15px);
    z-index: 99;
  }
  .nav-links.fold {
    left: 0px !important;
  }
  .logo {
    width: 32px;
    height: 32px;
    margin-right: 50px;
  }
  .links {
    display: flex;
    justify-content: space-between;
    width: 300px;
    font-size: 14px;
    font-weight: bold;
  }
  .links a {
    position: relative;
    padding: 10px 14px;
    border-radius: 10px;
  }
  .links a::after {
    content: "";
    position: absolute;
    bottom: 8px;
    left: 50%;
    width: 0;
    height: 8px;
    border-radius: 4px;
    background-color: rgba(12, 79, 254, 0.6);
    transform: translateX(-50%);
    transition: width 0.3s ease;
  }
  .links a:hover::after {
    width: 100%;
  }
</style>
