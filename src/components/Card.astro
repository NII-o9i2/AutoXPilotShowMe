---
const {imgUrl,name,school,isBlack} = Astro.props
---

<div class="container" style=`background: ${isBlack ? 'black' : 'transparent'}`>
  <div class="avatar">
    <img src=`${import.meta.env.BASE_URL}/${imgUrl}` >
  </div>
  <div class="text">
    <p class="name">{name}</p>
    <p class="school">{school}</p>
  </div>
</div>

<style>
  @media screen and (max-width: 810px) {
    .container {
      flex-direction: row !important;
      align-items: center !important;
      width: 240px !important;
      height: 100px !important;
      background: transparent !important;
      
    }
    .text {
      /* width: 50% !important; */
      display: flex;
      flex-direction: column;
      align-items: start;
      margin-left: 12px;
    }
    .avatar {
      width: 40px !important;
      height: 40px !important;
    }
    .name {
      font-size: 12px !important;
      text-align: left !important;
      color: black !important;
    }
    .school {
      text-align: left !important;
      color: black !important;
    }
  }
.container{
  display: flex;
  position: relative;
  overflow: hidden;
  flex-direction: column;
  align-items: center;
  width: 180px;
  height: 180px;
  /* background-color: black; */
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border-radius: 18px;
  padding: 20px;
  margin-right: 24px;
  margin-bottom: 24px;
  box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
  transition: all 0.3s ease-in-out;
}

.container:hover {
  transform: scale(1.05);
}

.container::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(228, 240, 255, 0.4),
      transparent
    );
    transition: all 350ms;
  }
  .container:hover::before {
    left: 100%;
  }

.avatar{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 12px;
}
p {
  color: white;
  text-align: center;
}
.name {
  font-size: large;
  font-weight: bold;
  margin-bottom: 2px;
}
.school {
  font-size: small;
  color: rgba(255, 255, 255, 0.8);
}
</style>